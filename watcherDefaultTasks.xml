<application>
  <component name="ApplicationTasksOptions">
    <global-watchers>
      <TaskOptions>
        <option name="arguments" value="-style=&quot;{BasedOnStyle: Google, ColumnLimit: 120, IndentWidth: 4, DerivePointerAlignment: false, AccessModifierOffset: -2}&quot; -i $FileName$" />
        <option name="checkSyntaxErrors" value="true" />
        <option name="description" />
        <option name="exitCodeBehavior" value="ERROR" />
        <option name="fileExtension" value="cpp" />
        <option name="immediateSync" value="true" />
        <option name="name" value="Clang Format" />
        <option name="output" value="$FileName$" />
        <option name="outputFilters">
          <array />
        </option>
        <option name="outputFromStdout" value="false" />
        <option name="program" value="/usr/bin/clang-format" />
        <option name="runOnExternalChanges" value="true" />
        <option name="scopeName" value="Open Files" />
        <option name="trackOnlyRoot" value="false" />
        <option name="workingDir" value="$FileDir$" />
        <envs />
      </TaskOptions>
    </global-watchers>
  </component>
</application>